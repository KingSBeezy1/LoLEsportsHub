@using LoLEsportsHub.Web.ViewModels.Match
@model MatchDetailsViewModel

@{
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.VodUrl"
                 class="img-fluid rounded shadow"
                 alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h3 class="fw-bold">@Model.Title</h3>
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Schedule Date:</strong> @Model.ScheduleDate</p>
            <p><strong>Region:</strong> @Model.Region</p>
        </div>
    </div>
</div>