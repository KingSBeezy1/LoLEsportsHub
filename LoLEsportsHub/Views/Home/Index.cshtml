@model LoLEsportsHub.Web.ViewModels.Home.HomePageViewModel

@{
    ViewData["Title"] = "Home";
}

<section class="hero bg-dark text-white py-5 text-center">
    <div class="container">
        <h1 class="display-4">Welcome to LoL Esports Hub</h1>
        <p class="lead">Follow tournaments, track matches, and never miss a moment!</p>
    </div>
</section>

<section class="container mt-5">
    <h2 class="mb-4">🔥 Trending Tournaments</h2>

    <div class="row">
        @foreach (var tournament in Model.TrendingTournaments)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@tournament.Name</h5>
                        <p class="card-text">Region: <strong>@tournament.Region</strong></p>
                        <p class="card-text">Matches: <strong>@tournament.MatchCount</strong></p>
                        <a asp-controller="Tournament" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>