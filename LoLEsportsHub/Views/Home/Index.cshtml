@{
    ViewData["Title"] = "Welcome to LoL Esports Hub";
}

<div class="welcome-hero d-flex align-items-center justify-content-center text-center">
    <div class="overlay"></div>
    <div class="welcome-content">
        <h1 class="display-3 fw-bold text-glow mb-3">⚡ LoL Esports Hub ⚡</h1>
        <p class="lead text-light mb-4">
            Track tournaments, matches, and all the action from your favorite esports leagues.
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Tournament" asp-action="Index" class="btn btn-neon-primary btn-lg">
                <i class="bi bi-trophy-fill"></i> View Tournaments
            </a>
            <a asp-controller="Match" asp-action="Index" class="btn btn-neon-secondary btn-lg">
                <i class="bi bi-controller"></i> Watch Matches
            </a>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center text-info fw-bold mb-4">🔥 Trending Tournaments</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Example placeholders, dynamically bind tournaments later -->
        <div class="col">
            <div class="card bg-dark border border-secondary shadow-lg hover-glow">
                <div class="card-body text-light">
                    <h5 class="card-title text-warning fw-bold">Worlds 2025</h5>
                    <p class="card-text text-muted">The ultimate clash of champions.</p>
                    <a href="/Tournament/Details/66666666-FFFF-FFFF-FFFF-666666666666" class="btn btn-outline-light btn-sm">View Details</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-dark border border-secondary shadow-lg hover-glow">
                <div class="card-body text-light">
                    <h5 class="card-title text-warning fw-bold">LEC Spring Split</h5>
                    <p class="card-text text-muted">Europe’s top teams face off.</p>
                    <a href="/Tournament/Details/33333333-CCCC-CCCC-CCCC-333333333333" class="btn btn-outline-light btn-sm">View Details</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-dark border border-secondary shadow-lg hover-glow">
                <div class="card-body text-light">
                    <h5 class="card-title text-warning fw-bold">LCK Summer Finals</h5>
                    <p class="card-text text-muted">The kings of Korea battle for glory.</p>
                    <a href="/Tournament/Details/22222222-BBBB-BBBB-BBBB-222222222222" class="btn btn-outline-light btn-sm">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>