@using LoLEsportsHub.Web.ViewModels.Tournament
@model TournamentDetailsViewModel

@{
    ViewData["Title"] = "Tournament Program";
}

<div class="container mt-4 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-warning">@Model.Name - Program</h2>
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i> Back to Tournaments
        </a>
    </div>

    <p class="text-muted"><strong>Region:</strong> @Model.Region</p>

    <h4 class="text-info mb-3">Matches</h4>

    @if (Model.Matches.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (TournamentDetailsMatchViewModel match in Model.Matches)
            {
                <div class="col">
                    <div class="card bg-dark text-light shadow-sm h-100 border border-secondary rounded-3">
                        <div class="card-body">
                            <h5 class="card-title text-warning fw-bold">@match.Title</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event"></i> Scheduled: @match.ScheduleDate
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-secondary text-center mt-3">
            <i class="bi bi-info-circle"></i> No matches are currently scheduled.
        </div>
    }
</div>