@using LoLEsportsHub.Web.ViewModels.Tournament
@model TournamentBracketViewModel

@{
    ViewData["Title"] = "Tournament Program";
}

@section Styles {
    <link rel="stylesheet" href="~/css/user.css" />
}

<div class="bg-dark text-light py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-light">
                @Model.TournamentName
                <small class="text-muted fs-5">by @Model.OrganizerName</small>
            </h1>

            <a asp-controller="Tournament" asp-action="Index" class="btn btn-outline-light fw-bold">
                <i class="bi bi-arrow-left"></i> Back to Tournaments
            </a>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var match in Model.Matches)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-3 p-3"
                         style="background-color: #1e1e2f;">

                        <div class="card-body text-light text-center">
                            <h5 class="card-title text-info fw-bold">@match.Title</h5>
                            <p class="card-text text-muted small mb-1">
                                <strong>Region:</strong> @match.Region
                            </p>
                            <p class="card-text text-muted small mb-1">
                                <strong>Match Date:</strong> @match.MatchDate.ToString("yyyy-MM-dd HH:mm")
                            </p>
                            <p class="card-text small mb-3">
                                <strong>Available Slots:</strong> @match.AvailableSlots
                            </p>

                            <div class="d-flex flex-column gap-2">
                                <!-- ✅ Modal trigger button (replaces old anchor link) -->
                                <button type="button"
                                        class="btn btn-outline-info rounded-pill fw-bold view-details-btn"
                                        data-match-id="@match.Id">
                                    <i class="fas fa-info-circle"></i> Match Details
                                </button>

                                @if (!string.IsNullOrEmpty(match.VODUrl))
                                {
                                    <a href="@match.VODUrl"
                                       target="_blank"
                                       class="btn btn-outline-primary rounded-pill fw-bold">
                                        <i class="fas fa-play-circle"></i> Watch VOD
                                    </a>
                                }

                                @if (User.Identity is { IsAuthenticated: true } && !User.IsInRole("Organizer"))
                                {
                                    <button class="btn btn-success rounded-pill fw-bold buy-ticket-btn"
                                            data-match-id="@match.Id"
                                            data-match-title="@match.Title">
                                        <i class="fas fa-ticket-alt"></i> Buy Ticket
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- ✅ Match Details Modal -->
<div class="modal fade" id="matchDetailsModal" tabindex="-1" aria-labelledby="matchDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="matchDetailsLabel"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body bg-light text-dark">
                <div id="matchDetailsContent" class="p-3"></div>
            </div>

            <div class="modal-footer bg-white">
                @if (User.Identity is { IsAuthenticated: true } && !User.IsInRole("Admin"))
                {
                    <button id="add-to-bookmarks-btn" class="btn btn-warning">Add to Bookmarks</button>
                }
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/matches.js"></script>
}

<partial name="_BuyTicketModalPartial" />