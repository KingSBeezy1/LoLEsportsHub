@{
    ViewData["Title"] = "Confirm Delete";
}
@model LoLEsportsHub.Web.ViewModels.Match.DeleteMatchViewModel

<div class="container mt-5">
    <div class="card shadow-lg border-0 bg-dark text-light rounded-4 p-4">
        <div class="card-body text-center">
            <h2 class="text-danger fw-bold mb-4">
                <i class="bi bi-exclamation-triangle"></i> Delete Match
            </h2>
            <hr class="border-secondary">

            <p class="fs-5 mb-3">
                Are you sure you want to <strong class="text-danger">delete</strong> this match?
            </p>

            <h4 class="text-warning fw-bold">@Model.Title</h4>

            @if (!string.IsNullOrEmpty(Model.VodUrl))
            {
                <div class="mt-3">
                    <img src="@Model.VodUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 200px;" />
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger fw-bold me-2">
                    <i class="bi bi-trash"></i> Yes, Delete
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-outline-light fw-bold">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>