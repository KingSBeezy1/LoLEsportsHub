@model LoLEsportsHub.Web.ViewModels.Match.MatchDetailsViewModel

<div class="container mt-5">
    <div class="card shadow-lg border-0 bg-dark text-light rounded-4 p-4">
        <div class="card-body">
            <!-- Title -->
            <h2 class="card-title text-center text-warning fw-bold display-6 mb-4">
                <i class="bi bi-controller"></i> @Model.Title
            </h2>
            <hr class="border-secondary mb-4">

            <!-- Match Info -->
            <div class="mb-4">
                <p class="card-text fs-5 mb-2">
                    <i class="bi bi-globe2 text-warning me-2"></i>
                    <strong class="text-warning">Region:</strong> @Model.Region
                </p>
                <p class="card-text fs-5">
                    <i class="bi bi-calendar-event text-warning me-2"></i>
                    <strong class="text-warning">Scheduled Date:</strong> @Model.ScheduleDate
                </p>
            </div>

            <!-- Buttons -->
            <div class="d-flex flex-wrap gap-2 justify-content-center mt-4">
                @if (!string.IsNullOrEmpty(Model.VodUrl))
                {
                    <a href="@Model.VodUrl" target="_blank"
                       class="btn btn-warning fw-bold px-4 shadow-sm rounded-pill">
                        <i class="bi bi-play-circle me-1"></i> Watch VOD
                    </a>
                }

                <a asp-controller="Match"
                   asp-action="Edit"
                   asp-route-id="@Model.Id"
                   class="btn btn-primary fw-bold px-4 shadow-sm rounded-pill">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>

                <a asp-controller="Match"
                   asp-action="Delete"
                   asp-route-id="@Model.Id"
                   class="btn btn-danger fw-bold px-4 shadow-sm rounded-pill">
                    <i class="bi bi-trash me-1"></i> Delete
                </a>

                <a asp-controller="Match"
                   asp-action="Index"
                   class="btn btn-outline-light fw-bold px-4 shadow-sm rounded-pill">
                    <i class="bi bi-arrow-left me-1"></i> Back to Matches
                </a>
            </div>
        </div>
    </div>
</div>